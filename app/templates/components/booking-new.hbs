{{#if addNewBooking}}
<form>
  <div class="form-group">
    <label for=use>Use</label>
    {{#power-select
      selected=use
      options=usesArray
      onchange=(action (mut use))
      as |item|
    }}
    {{item}}
    {{/power-select}}
  </div>
  <div class="form-group">
    <label for=details>details</label>
    {{textarea class="form-control" value=details id="details"}}
  </div>
  <div class="form-group">
    <label for=when>when</label>
    {{input class="form-control" type="date" value=when id="when"}}
  </div>
  <div class="form-group">
    <label for=booker>Your Username</label>
    {{input class="form-control" value=booker id="booker"}}
  </div>
  <button class="btn btn-default" {{action 'saveBooking' listing}}>Save Booking</button>
</form>
{{else}}
<button class="btn btn-default" {{action 'revealAddNewBooking'}}>Book!</button>
{{/if}}
